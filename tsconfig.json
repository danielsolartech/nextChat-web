{
  "compilerOptions": {
    "target": "ES6",
    "module": "CommonJS",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "outDir": "./build/",
    "strict": true,
    "noImplicitAny": true,
    "allowJs": true,
    "jsx": "react"
  },
  "exclude": [
    "./node_modules/",
    "./build/",
    "./public/"
  ],
  "include": [
    "./src/"
  ]
}